<scheme>
    <targetType name="verb" />
    <targetType name="passage" />
    <!-- an example for a different target type that annotators can create -->

    <labelSet name="SituationEntityType" exclusive="yes">
        <!-- If exclusive = yes, annotators can chose only one of these labels. If no, multiple would be allowed.-->
        <appliesToTarget>verb</appliesToTarget>
        <!-- allow for multiple appliesToTarget definitions -->
         <label>STATE</label>
         <label>EVENT</label>
         <label>GENERIC</label>
         <label>OTHER</label>
    </labelSet>
    
    <labelSet name="DiscourseMode" exclusive="no">
        <appliesToTarget>passage</appliesToTarget>
        <!-- allow for multiple appliesToTarget definitions -->
         <label>NARRATIVE</label>
         <label>REPORT</label>
         <label>INFORMATION</label>
         <label>DESCRIPTION</label>
         <label>ARGUMENT/COMMENTARY</label>
         <label>OTHER</label>
    </labelSet>

    <labelSet name="Modality" exclusive="yes">
        <appliesToTarget>verb</appliesToTarget>
         <label>Actual</label>
         <label>Modalized</label>
         <label>Negated</label>
         <label>OTHER</label>
    </labelSet>

    <linkSet startType="verb" endType="verb" allowUnlabeledLinks="no">
        <linkLabel>before</linkLabel>
        <linkLabel>after<linkLabel>
        <linkLabel>overlap</linkLabel>
    </linkSet>
    
</scheme>
